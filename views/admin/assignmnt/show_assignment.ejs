
<%- include ('../layout/header.ejs') %>


<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                <div class="d-flex justify-content-between">
                  <h4 class="card-title"></h4>
          
                  <a href="/assignments/create" style="padding:10px; border-radius:5px" class="btn-success"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add Assignment</a>
              
               </div>
                  <p class="card-description">
                    <!-- Add class <code>.table-bordered</code> -->
                  </p>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered myTable">
                         <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                            Title
                          </th>
                          <th>
                            Chapter
                          </th>
                          <th>
                            Type
                          </th>
                          <th>
                            Total Question
                          </th>
                          <th>
                            Action
                          </th>
                        </tr>
                      </thead>


                      <tbody>
                        <%  
                        i=1; 
                        data.forEach(function(cop){ 
                        %>
                      
                        <tr>
                          <td>
                           <%= i %>
                          </td>
                          <td>
                            <%= cop.name %>
                          </td>

                          <td>
                           <%=  cop.chapter_id?.chapter_name %>
                          </td>

                          <td>
                            <%=  cop.type %>
                          </td>

                         <td>
                           <%= cop.get_question.length %>
                          </td>
                        
                          <td>
                           
                            <a href="/assignments/view_assignment/<%= cop._id %>" class="btn btn-success btn-sm" title="view button"><i class="fa fa-eye" aria-hidden="true"></i></a>
                            <a href="/assignments/delete_assignment/<%= cop._id %>" data-toggle="tooltip" data-placement="top" title="delete Button" onclick = "if (! confirm('are you sure you want to delete this?')) { return false; }" class="btn btn-primary btn-sm"><i class="fa fa-trash" aria-hidden="true"></i></a>
                            <a href="/assignments/edit_assignment/<%= cop._id %>" data-toggle="tooltip" data-placement="top" title="edit button" style="background-color:blue" class="btn btn-primary btn-sm"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                 

                          </td>
                        
                        </tr>
                       
                       <%
                       i++;
                       });
                       %>
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

            <%- include ('../layout/footer.ejs') %>
