
<%- include ('../layout/header.ejs') %>


<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                <div class="d-flex justify-content-between">
                  <h4 class="card-title"></h4>
          
                  <a href="/assignments/show_assignment" style="padding:10px; border-radius:5px" class="btn-success"><i class="fa fa-plus-circle" aria-hidden="true"></i> Back </a>
              
               </div>
                  <p class="card-description">
                    <!-- Add class <code>.table-bordered</code> --> 
                  </p>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered myTable">
                         <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                            Playlist
                          </th>
                          <th>
                            Question
                          </th>
                          <th>
                            Answer/Second Answer
                          </th>
                          <th>
                            Marks
                          </th>
                          <th>
                            Nagetive
                          </th>
                          <th>
                            Position
                          </th>
                      
                        </tr>
                      </thead>


                      <tbody>
                        <%  
                        i=1; 
                        question.forEach(function(cop){ 
                        %>
                      
                        <tr>
                          <td>
                           <%= i %>
                          </td>
                          <td>
                            <%= cop.assignment_id.name %>
                          </td>


                          <td>
                            <%=  cop.question %>
                              </td>

                        <td>
                          <%=  cop.answer %> / <%= cop.second_answer  %>
                        </td>

                        <td>
                            <%=  cop.marks %>
                          </td>

                          <td>
                            <%=  cop.negative %>
                          </td>
                        
                          <td>
                            <%=  cop.position %>
                          </td>                        
                        </tr>
                       
                       <%
                       i++;
                       });
                       %>
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

            <%- include ('../layout/footer.ejs') %>
