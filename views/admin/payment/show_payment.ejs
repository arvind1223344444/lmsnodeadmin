
<%- include ('../layout/header.ejs') %>


<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                <div class="d-flex justify-content-between">
                  <h4 class="card-title"></h4>
                  <% if(inArray(locals.usersession.roles_id.permission,'addLevel')){ %>
                  <a href="/payment/addpayment" style="padding:10px; border-radius:5px" class="btn-success"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add Payment</a>
                  <% }%>
               </div>
                  <p class="card-description">
                    <!-- Add class <code>.table-bordered</code> -->
                  </p>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered myTable">
                         <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                            Course
                          </th>
                          <th>
                            Fee
                          </th>
                          <th>
                            Discount
                          </th>
                          <th>
                            Action
                          </th>
                        </tr>
                      </thead>


                      <tbody>
                        <%  
                        i=1; 
                        payment.forEach(function(level){ 
                        %>
                      
                        <tr>
                          <td>
                           <%= i %>
                          </td>
                          <td>
                            <%= level.playlist_id.playlist %>
                          </td>

                          <td>
                        <%=  level.fee %>
                          </td>

                          <td>
                            <%=  level.discount %>
                              </td>
                        
                          <td>
                           
                            <% if(inArray(locals.usersession.roles_id.permission,'deleteLevel')){ %>
                         <a href="/payment/delete_payment/<%= level._id %>" data-toggle="tooltip" data-placement="top" title="delete Button" onclick = "if (! confirm('are you sure you want to delete this level?')) { return false; }" class="btn btn-primary btn-sm"><i class="fa fa-trash" aria-hidden="true"></i></a>
                         <% } %>


                       

                          <% if(inArray(locals.usersession.roles_id.permission,'editLevel')){ %>
                          <a href="/payment/edit_payment/<%= level._id %>" data-toggle="tooltip" data-placement="top" title="edit button" style="background-color:blue" class="btn btn-primary btn-sm"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                          <% } %>

                          </td>
                        
                        </tr>
                       
                       <%
                       i++;
                       });
                       %>
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

            <%- include ('../layout/footer.ejs') %>
